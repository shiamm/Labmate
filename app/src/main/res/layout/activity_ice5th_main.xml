<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".ICE7thSemester.ICE_7th_sem_MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cut_corner_main_menu"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/rubik_bold"
            android:gravity="center"
            android:text="7th Semester\n"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginVertical="20dp"
            android:alpha=".87"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:lines="1"
            android:padding="2dp"
            android:text="Select Course"
            android:textAlignment="center"
            android:textSize="18sp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cut_corner_four_side"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cut_corner_four_side"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_ice4112"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginBottom="2dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true"
                    app:rippleColor="@color/primary"
                    app:strokeColor="?attr/colorOnSurface"
                    app:strokeWidth="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="0dp"
                        android:background="#FFFFFF"
                        android:weightSum="6">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4.2"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="0dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginVertical="2dp"
                                android:alpha=".87"
                                android:fontFamily="@font/rubik_medium"
                                android:lines="1"
                                android:paddingRight="1dp"
                                android:text="ICE 4112"
                                android:textAlignment="viewStart"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:alpha=".77"
                                android:gravity="start"
                                android:fontFamily="@font/rubik_regular"
                                android:paddingRight="1dp"
                                android:autoSizeTextType="uniform"
                                android:textColor="@color/black"
                                android:text="Artificial intelligence and neural computing sessional"
                                android:textAlignment="viewStart"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.6"
                            android:src="@drawable/undraw_artificial_intelligence_re_enpp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_ice4122"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginBottom="2dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true"
                    app:rippleColor="@color/primary"
                    app:strokeColor="?attr/colorOnSurface"
                    app:strokeWidth="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="0dp"
                        android:background="#FFFFFF"
                        android:weightSum="6">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4.2"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="0dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginVertical="10dp"
                                android:alpha=".87"
                                android:fontFamily="@font/rubik_medium"
                                android:lines="1"
                                android:paddingRight="1dp"
                                android:text="ICE 4122"
                                android:textAlignment="viewStart"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:alpha=".77"
                                android:gravity="start"
                                android:fontFamily="@font/rubik_regular"
                                android:paddingRight="1dp"
                                android:textColor="@color/black"
                                android:autoSizeTextType="uniform"
                                android:text="Computer networks sessional"
                                android:textAlignment="viewStart"
                                android:textSize="17sp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.6"
                            android:src="@drawable/undraw_shared_workspace_re_3gsu" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_ice4132"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginBottom="2dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true"
                    app:rippleColor="@color/primary"
                    app:strokeColor="?attr/colorOnSurface"
                    app:strokeWidth="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="0dp"
                        android:background="#FFFFFF"
                        android:weightSum="6">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4.2"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="0dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginVertical="2dp"
                                android:alpha=".87"
                                android:fontFamily="@font/rubik_medium"
                                android:lines="1"
                                android:paddingRight="1dp"
                                android:text="ICE 4132"
                                android:textAlignment="viewStart"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:alpha=".77"
                                android:gravity="start"
                                android:fontFamily="@font/rubik_regular"
                                android:paddingRight="1dp"
                                android:textColor="@color/black"
                                android:text="Database management system sessional"
                                android:textAlignment="viewStart"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.6"
                            android:src="@drawable/undraw_maintenance_re_59vn" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</LinearLayout>